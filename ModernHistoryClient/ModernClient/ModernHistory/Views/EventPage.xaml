<UserControl x:Class="ModernHistory.Others.EventPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Views/Event/EventList.xaml">
            <mui:ModernTab.Links>
                <!--外观设置-->
                <mui:Link DisplayName="事件列表"   Source="/Views/Event/EventList.xaml" />
                <mui:Link DisplayName="新增"       Source="/Views/Event/EventAdd.xaml"/>
                <mui:Link DisplayName="详细信息"   Source="/Views/Event/EventDetail.xaml" />
                <mui:Link DisplayName="修改"       Source="/Views/Event/EventEdit.xaml"/>
                <mui:Link DisplayName="删除"       Source="/Views/Event/EventDeleteConfirm.xaml"/>
                <mui:Link DisplayName="统计信息"   Source="/Views/Event/EventStatics.xaml"/>
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
