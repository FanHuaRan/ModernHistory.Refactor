<UserControl x:Class="ModernHistory.Others.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Views/Others/Appearance.xaml">
            <mui:ModernTab.Links>
                <!--外观设置-->
                <mui:Link DisplayName="外观设置" Source="/Views/Others/Appearance.xaml" />
                <mui:Link DisplayName="系统设置"/>
                <!--关于-->
                <mui:Link DisplayName="关于" Source="/Views/Others/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
     </Grid>
</UserControl>